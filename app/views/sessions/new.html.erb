<div class="login">
	<h3>Login</h3>
	<div>
		<%= form_tag login_path do %>
			<div class="form-group">
				<label>Name: </label><br>
				<%= text_field_tag "name" %>
			</div>
			<div class="form-group">
				<label>Password: </label><br>
				<%= password_field_tag "password" %>
			</div>
			<div class="form-group">
				<%= submit_tag "Login", class: "btn btn-primary" %>
			</div>
		<% end %>
		<p>Need to <a href="/users/new">sign up</a>?</p>
	</div>
</div>